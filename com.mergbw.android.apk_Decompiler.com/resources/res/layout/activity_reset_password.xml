<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@mipmap/bg_main" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/layout_head" android:layout_width="match_parent" android:layout_height="44dp" app:layout_constraintTop_toTopOf="0">
        <ImageView android:id="@+id/iv_back" android:layout_width="36dp" android:layout_height="36dp" android:src="@mipmap/icon_back" android:layout_centerVertical="true" android:layout_marginStart="12dp"/>
        <TextView android:textSize="18sp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="重置密码" android:layout_centerInParent="true" android:alpha="0.9"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/layout_email" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/layout_head">
        <TextView android:textSize="24sp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="邮箱" android:layout_marginStart="40dp"/>
        <EditText android:textSize="15sp" android:textColor="@color/white" android:textColorHint="#55ffffff" android:id="@+id/et_email" android:background="@null" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginLeft="40dp" android:layout_marginTop="15dp" android:layout_marginRight="40dp" android:hint="请输入注册时的邮箱" android:inputType="textEmailAddress" android:layout_marginHorizontal="40dp"/>
        <View android:id="@+id/view_email_divider" android:background="#979797" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="40dp" android:layout_marginRight="40dp" android:alpha="0.2" android:layout_marginHorizontal="40dp"/>
        <TextView android:textSize="12sp" android:textColor="#e1526d" android:id="@+id/tv_emial_error" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="请输入正确的邮箱" android:layout_marginStart="40dp"/>
        <Button android:textSize="16sp" android:textColor="@color/white" android:id="@+id/btn_next" android:background="@drawable/btn_main_solid" android:layout_width="match_parent" android:layout_height="44dp" android:layout_marginLeft="40dp" android:layout_marginTop="85dp" android:layout_marginRight="40dp" android:text="下一步" android:layout_marginHorizontal="40dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/layout_verify" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/layout_head">
        <TextView android:textSize="24sp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="验证码" android:layout_marginStart="40dp"/>
        <EditText android:textSize="15sp" android:textColor="@color/white" android:textColorHint="#55ffffff" android:id="@+id/et_verify" android:background="@null" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginLeft="40dp" android:layout_marginTop="15dp" android:layout_marginRight="40dp" android:hint="请输入您邮箱收到的验证码" android:inputType="textPassword" android:layout_marginHorizontal="40dp"/>
        <View android:id="@+id/view_verify_dvider" android:background="#979797" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="40dp" android:layout_marginRight="40dp" android:alpha="0.2" android:layout_marginHorizontal="40dp"/>
        <TextView android:textSize="12sp" android:textColor="#e1526d" android:id="@+id/tv_verify_error" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="验证码错误" android:layout_marginStart="40dp"/>
        <TextView android:textSize="24sp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="新密码" android:layout_marginStart="40dp"/>
        <EditText android:textSize="15sp" android:textColor="@color/white" android:textColorHint="#55ffffff" android:id="@+id/et_password" android:background="@null" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginLeft="40dp" android:layout_marginTop="15dp" android:layout_marginRight="40dp" android:hint="请设置新密码" android:inputType="textPassword" android:layout_marginHorizontal="40dp"/>
        <View android:id="@+id/view_password_divider" android:background="#979797" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="40dp" android:layout_marginRight="40dp" android:alpha="0.2" android:layout_marginHorizontal="40dp"/>
        <TextView android:textSize="12sp" android:textColor="#e1526d" android:id="@+id/tv_password_error" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="密码格式不正确" android:layout_marginStart="40dp"/>
        <EditText android:textSize="15sp" android:textColor="@color/white" android:textColorHint="#55ffffff" android:id="@+id/et_password_again" android:background="@null" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginLeft="40dp" android:layout_marginTop="15dp" android:layout_marginRight="40dp" android:hint="请确认新密码" android:inputType="textPassword" android:layout_marginHorizontal="40dp"/>
        <View android:id="@+id/view_password_again_divider" android:background="#979797" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="40dp" android:layout_marginRight="40dp" android:alpha="0.2" android:layout_marginHorizontal="40dp"/>
        <TextView android:textSize="12sp" android:textColor="#e1526d" android:id="@+id/tv_password_again_error" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="两次输入密码不一致" android:layout_marginStart="40dp"/>
        <Button android:textSize="16sp" android:textColor="@color/white" android:id="@+id/btn_submit" android:background="@drawable/btn_main_solid" android:layout_width="match_parent" android:layout_height="44dp" android:layout_marginLeft="40dp" android:layout_marginTop="85dp" android:layout_marginRight="40dp" android:text="提交" android:layout_marginHorizontal="40dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
